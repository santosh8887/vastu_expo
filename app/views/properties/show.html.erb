<div class="container"><!-- container via hooks -->
  <div id="main" class="row-fluid">
    <section  id="content" class="span9" role="main">
      <%= link_to 'Edit', edit_property_path(@property), class: "btn btn-contact" if user_signed_in? %>
      <article class="post-56 property type-property status-publish hentry clearfix" id="property-56">
        <div id="property_slider_wrapper">
          <div id="myCarousel" class="carousel slide">
            <!-- Carousel items -->
            <div class="carousel-inner">
              <% @property.property_attachments.where(small_avatar: nil).each_with_index do|larg_attachment, i|%>
              <div class="item <%= i == 0 ? 'active' : ''%>">
              <%= image_tag "#{larg_attachment.avatar_url}", class: "optional_class", width: '870', height: '350', alt: '' %>
              </div>
              <% end %>
            </div>
            <div class="carousel-thumbnail">
              <!-- Carousel nav -->
              <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
              <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
              <ol class="carousel-indicators hidden-phone">
                <% @property.property_attachments.where(avatar: nil).each_with_index do|small_attachment, i|%>
                  <li data-target='#myCarousel' data-slide-to="<%= i %>" class="item <%= i == 0 ? 'active' : ''%>">
                    <%= image_tag "#{small_attachment.small_avatar_url}", width: '80', height: '80', alt: '' %>
                  </li>
                <% end %>
              </ol>              
            </div>
          </div>
        </div><!-- /#property_slider_wrapper -->
        <div id="single_property_meta_wrapper">
          <div class="single-property-meta clearfix status-35-text">
            <span class="meta-size"><i class="ico-size"></i><%= @property.size %>M</span>
            <span class="meta-bedroom"><i class="ico-bedroom"></i><%= @property.bedroom %><span class="meta-hidden"> Bedrooms</span></span>
            <span class="meta-bathroom"><i class="ico-bathroom"></i><%= @property.bathroom %><span class="meta-hidden"> Bathrooms</span></span>
            <span class="meta-garage"><i class="ico-garage"></i><%= @property.garage %><span class="meta-hidden"> Garages</span></span>
            <span class="meta-print visible-desktop"><i class="ico-print"></i>
              <span class="print-hidden"><a href="javascript:window.print()">Print this page</a></span>
            </span>
            <span class="meta-status">For <%= @property.try(:uses) %></span>
          </div>
        </div>
        <div class="single-property-content-wrapper">
          <header class="single-property-header">
            <h3 class="single-property-title"><%= @property.name %></h3>
            <p class="single-property-address"><%= @property.address %></p>
          </header>
          <div class="single-property-price">
            <p><h3><sup class="price-curr">$</sup><%= @property.size %>&nbsp;<span class="price-postfix"></span></h3></p>
          </div>
          <div class="single-property-content">
            <p><%= @property.larg_description %></p>
            <p>&nbsp;</p>
          </div>
          <div class="single-property-map">
            <div id="the_map" class="map-wrap clearfix">
              <span class="map-label">Property Map</span>
              <div id="property_map"></div>
            </div>
          </div>
          <!-- Modal -->
          <div id="contactAgent" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="contactAgentLabel" aria-hidden="true">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
              <h3>
                Send message to Rahul           
              </h3>
            </div>
            <div class="modal-body">
              <form id="contact-agent-form" action="#" method="post">
                <div class="controls controls-row">
                  <input class="span6" name="name" type="text" placeholder="*Name " required />
                  <input class="span6" name="email" type="email" placeholder="*Email" required />
                </div>
                <div class="controls">
                  <textarea name="message" class="span12" rows="10" placeholder="*Message" required></textarea>
                </div>
                <div class="controls">
                  <input id="submit" class="btn btn-contact" type="submit" name="submit" value="Send" />
                </div>
              </form>
            </div>
          </div>
        </div>
      </article>
    </section><!-- #content -->
    <section id="sidebar" class="span3" role="complementary">
      <aside id="property_agent-2" class="widget property-agent">
        <h3 class="widget-title">Get a deal</h3>
        <div class="content-widget">
        <div class="agent-widget-name">ABC Developers</div>
        
        <div class="clear"></div>
        <div class="agent-widget-excerpt">Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidu</div><p>&nbsp;</p>
        <div class="agent-desc"><a role="button" data-toggle="modal" class="button button-search-widget" href="#contactAgent">Contact Now</a></div></div><!-- /.content-widget -->
      </aside>
