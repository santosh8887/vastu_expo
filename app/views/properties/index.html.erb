<div id="title-listing" class="container">
  <div class="property-list-title">Properties Listing</div>
  <div class="property-list-by">
    <a class="current" href="#">All</a>
    <a class="" href="#">Apartments</a>
    <a class="" href="#">Plots</a>
    <%= link_to 'Add new property', new_property_path if user_signed_in? %>
  </div>
</div><!-- /#title-listing -->

<div class="container"><!-- container via hooks -->
  <div id="main" class="row-fluid">
    <section  id="content" class="span9" role="main">
      <div id="archive-wrapper">
        <div class="row-fluid">

          <% @properties.each do|property|%>

          <div class="row-fluid property-listing status-35 clearfix">
            <div class="listing-image span5">
              <div class="property-image-container">
                <a href="/properties/<%= property.id %>" title="<%= property.name %>">
                  <%= image_tag property.property_attachments.first.avatar_url, width: "540", height: "360", class: "attachment-real-property-loop wp-post-image", alt: "#{property.name}", title: "#{property.name}" %>
                </a>
              </div><!-- /.property-images-container -->
              <div class="listing-meta">
                <ul>
                  <li class="meta-size"><i class="ico-size"></i><%= property.size %>M</li>
                  <li class="meta-bedroom"><i class="ico-bedroom"></i><%= property.bedroom %></li>
                  <li class="meta-bathroom"><i class="ico-bathroom"></i><%= property.bathroom %></li>
                  <li class="meta-garage"><i class="ico-garage"></i><%= property.garage %></li>
                </ul>
              </div>
            </div>
            <div class="listing-info span7">
              <div class="listing-title">
                <a href="property-single.html" title="<%= property.name %>"><%= property.name %></a>
                <i class="icon-heart"></i>
              </div>
              <div class="listing-content">
                <div class="listing-property-price">
                  <sup class="price-curr">RS</sup><%= property.amount %>&nbsp;
                  <span class="price-postfix"></span>
                </div>
                <div class="listing-excerpt">
                  <p><%= property.description %></p>
                </div>
              </div>
              <div class="listing-address">
                <i class="icon-map-marker icon-large"></i>
                <%= property.address %>
                <a href="#" role="button" target="_blank">View Map</a>
              </div>

              <div class="listing-address">
                <%= link_to 'Edit', edit_property_path(property), class: "btn btn-contact" if user_signed_in? %>  
                <%= link_to "Delete", property, :method => :delete, :confirm => "Are you sure ?", class: "btn btn-contact" if user_signed_in? %>
              </div>

            </div>
            
          </div>
          <% end %>
        </div>
      </div><!-- /#archive-wrapper -->
      <div class="property-pagination">
        <ul class='page-numbers'>
          <li><span class='page-numbers current'>1</span></li>
          <li><a class='page-numbers' href='#'>2</a></li>
          <li><a class="next page-numbers" href="#"><i class="icon-caret-right"></i></a></li>
        </ul>
      </div>        
    </section><!-- #content -->
    <section id="sidebar" class="span3" role="complementary">
      <aside id="property-search-widget-2" class="widget widget-property-search">
        <h3 class="widget-title">Property Search</h3>
        <div class="content-widget">
